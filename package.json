{
  "name": "shareable",
  "private": true,
  "version": "0.0.0",
  "description": "Privacy-aware content sharing SDK for React",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gilljon/sharekit.git"
  },
  "type": "module",
  "scripts": {
    "build": "pnpm -r build",
    "dev": "pnpm -r --parallel dev",
    "test": "vitest",
    "test:run": "vitest run",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "changeset": "changeset",
    "version": "changeset version && biome check --write .",
    "release": "pnpm build && changeset publish",
    "clean": "pnpm -r clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.0",
    "@changesets/cli": "^2.27.0",
    "@types/node": "^25.3.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0",
    "vitest": "^2.1.0"
  },
  "packageManager": "pnpm@9.15.0",
  "engines": {
    "node": ">=22"
  }
}
