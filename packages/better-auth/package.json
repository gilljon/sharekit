  "dependencies": {
    "@sharekit/core": "workspace:*"
  },
  "devDependencies": {
    "better-auth": "^1.2.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "better-auth": "^1.0.0"
  }
}
