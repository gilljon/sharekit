{
  "name": "@sharekit/react-native",
  "version": "0.1.0",
  "description": "React Native components and API client for the Shareable SDK",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": ["dist", "README.md"],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@sharekit/core": "workspace:*"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "tsup": "^8.3.0",
    "typescript": "^5.7.0"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-native": ">=0.72.0",
    "expo-clipboard": ">=6.0.0",
    "expo-sharing": ">=12.0.0"
  },
  "peerDependenciesMeta": {
    "expo-clipboard": {
      "optional": true
    },
    "expo-sharing": {
      "optional": true
    }
  }
}
